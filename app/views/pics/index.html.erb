<div class="custom-font">
	<h2 class="cool-font-big text-center">Rocky's Web Development Journey</h2>

<% @pics.each do |pic| %>
	<div class="boxy span3">

		<h2>
				Hour <%= pic.hour %>
		<h/2>



		<div> 
				<%= image_tag pic.image.to_s %>

		</div>
		<p>
				<%= pic.emotion %>
		</p>


		<p>
			I learned that
			<%= pic.learned %>

		</p>

		<% if pic.user.present? %>

			<p>
				<b>email:</b> <% pic.user.email %>
		</p>
		<% end %>

	</div>

<% end %>
</div>